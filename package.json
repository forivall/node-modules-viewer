{
	"name": "node-modules-viewer",
	"displayName": "node_modules Dependency Viewer",
	"description": "First attempt at an extension",
	"Based of": "Samples for VSCode's view API",
	"version": "0.0.1",
	"publisher": "Mikael Jensen",
	"license": "MIT",
	"engines": {
		"vscode": "^1.21.0"
	},
	"enableProposedApi": true,
	"categories": [
		"Extension Packs",
		"Other"
	],
	"activationEvents": [
		"onView:node-modules-viewer"
	],
	"main": "./out/src/extension",
	"icon": "media/dep.png",
	"contributes": {
		"views": {
			"explorer": [
				{
					"id": "node-modules-viewer",
					"name": "Node Dependencies"
				}
			]
		},
		"commands": [
			{
				"command": "node-modules-viewer.addEntry",
				"title": "Add"
			},
			{
				"command": "node-modules-viewer.refreshEntry",
				"title": "Refresh",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
			},
			{
				"command": "node-modules-viewer.deleteEntry",
				"title": "Delete"
			},
			{
				"command": "node-modules-viewer.openPackageOnNpm",
				"title": "Open on npmjs.org"
			}
		],
		"menus": {
			"commandPalette": [],
			"view/item/context": [
				{
					"command": "node-modules-viewer.openFileInEditor",
					"when": "view == node-modules-viewer && viewItem == file",
					"title": "Open in Editor"
				},
				{
					"command": "node-modules-viewer.openPackageOnNpm",
					"when": "view == node-modules-viewer && viewItem == dependency",
					"title": "Open on npmjs.org"
				}
			]
		},
		"configuration": [
			{
				"type": "object",
				"title": "node_modules Dependency Viewer Configurations",
				"properties": {
					"node-modules-viewer.checkRoot": {
						"type": "boolean",
						"default": false,
						"description": "Complete functions with their parameter signature."
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "tsc -p ./",
		"compile": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install"
	},
	"devDependencies": {
		"typescript": "^2.1.4",
		"vscode": "^1.0.0",
		"@types/node": "*"
	},
	"dependencies": {
		"jsonc-parser": "^0.4.2",
		"ftp": "^0.3.10",
		"jsftp": "^2.0.0"
	}
}
